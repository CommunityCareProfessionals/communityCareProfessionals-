        <div class="bg-white p-2 border border-dark">
          <h1> Your Service Requests</h1>
          <div>
            <div class="tab bg-white mb-4">
              <button class="tablinks" onclick="openCity(event, 'Active')" id="defaultOpen">Active</button>
              <button class="tablinks" onclick="openCity(event, 'RecentlyFilled')">Recently Filled</button>
            </div>
            <div id="Active" style="display:block" class="tabcontent">
              {{#if services}}
