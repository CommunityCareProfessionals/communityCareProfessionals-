<div class='row'>
  <div class='col-md-6'>
    <div class='mb-5'>
      <div class='row'>
        <div class='mb-5'>
          <h2 class='text-left'>Hey
            {{user.first_name}}! Thank you for a willingness to serve</h2>
        </div>
      </div>
      {{#if services}}
        {{#each services}}
          <div class='card p-3' style='width: 20rem;'>
            <div class='card-body'>
              <h5 class='card-title'>{{name}}</h5>
              <p class='card-text'>{{description}}</p>
              <a
                href='#'
                id='edit_service_commitment'
                class='btn btn-primary'
              >Edit service commitment</a>
            </div>
          </div>

          <div class='row'>
            {{#each provider.provider_skills}}
              {{skill.name}}
            {{/each}}
          </div>
        {{/each}}
      {{else if provider_skill}}
        <h3>Your registered skill</h3>
        <button
          class='btn btn-warning'
          style='cursor: none;'
        >{{provider_skill.category.name}}/{{provider_skill.skill.name}}</button>
        <br />
        <br />
        <button class='btn btn-primary' id='update_existing_skill_btn'>Next step</button>

      {{else}}
        <div class='row'>
          <button
            type='submit'
            class='btn btn-primary'
            id='continue_getting_started_btn'
          >Let's get started</button>
        </div>
      {{/if}}
    </div>
  </div>
  <div class='col-md-6'>
    <div
      id='carouselExampleSlidesOnly'
      class='carousel slide'
      data-ride='carousel'
    >
      <div class='carousel-inner'>
        <div class='carousel-item active'>
            <img class='d-block w-100' src='../images/review1.png' alt='First slide' />
          </div>
        <div class='carousel-item'>
          <img
            class='d-block w-100'
            src='../images/eliareview.png'
            alt='Second slide'
          />
        </div>
        <div class='carousel-item'>
          <img
            class='d-block w-100'
            src='../images/nreview.png'
            alt='Third slide'
          />
        </div>
      </div>
    </div>
  </div>
</div>

<script src='../../js/dashboard.js'></script>