<div class='row'>
  <div class='col-md-6'>
    <div class='row mb-5'>
      <div>
        <h2 class='text-left'>Hey
          <strong>{{user.first_name}}!</strong>
          <br />Thank you for a willingness to serve.</h2>
      </div>
    </div>
    {{#if services}}
      <div class='row d-flex flex-row'>
        {{#each services}}
          <div class='card col-md-6 p-0' style='width: 20rem;'>
            <div class='card-body'>
              <h5 class='card-title bg-info'>{{name}}</h5>
              <p class='card-text'>{{description}}</p>
              <a
                href='#'
                id='edit_service_commitment'
                class='btn btn-primary'
              >edit service commitment</a>
            </div>
          </div>
        {{/each}}
      </div>
      <hr />
      <br />

      <div class='row d-flex flex-column'>
        <h3>Your registered skill</h3>
        <button
          class='btn btn-warning w-50'
          style='cursor: none;'
        >{{session.provider_skill.category.name}}/{{session.provider_skill.skill.name}}</button>
        <br />
        <br />
        <button
          class='btn btn-primary w-50'
          id='continue_getting_started_btn'
        >Let's do some more...</button>
      </div>
    {{else}}
      <div class='row'>
        <button
          type='submit'
          class='btn btn-primary'
          id='continue_getting_started_btn'
        >Let's get started</button>
      </div>
    {{/if}}
  </div>
  <div class='col-md-6'>
    <div
      id='carouselExampleSlidesOnly'
      class='carousel slide'
      data-ride='carousel'
    >
      <div class='carousel-inner'>
        <div class='carousel-item active'>
          <img
            class='d-block w-100'
            src='../images/review1.png'
            alt='First slide'
          />
        </div>
        <div class='carousel-item'>
          <img
            class='d-block w-100'
            src='../images/eliareview.png'
            alt='Second slide'
          />
        </div>
        <div class='carousel-item'>
          <img
            class='d-block w-100'
            src='../images/nreview.png'
            alt='Third slide'
          />
        </div>
      </div>
    </div>
  </div>
</div>
<script src='../../js/dashboard.js'></script>