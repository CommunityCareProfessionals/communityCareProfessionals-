<div class='row mb-15'>
  <div class='col-md-7'>
    <div class='row mb-5'>
      <div>
        <h2 class='text-left'>Hey
          <strong>{{user.first_name}}!</strong>
          <br />Thank you for a willingness to serve.</h2>
      </div>
    </div>
    {{#if services}}
      
      <!-- Tabs navs -->
      <ul class='nav nav-tabs tab mb-3' id='ex1' role='tablist'>
        <li data-toggle='tab' role='presentation'>
          <a
            class='nav-link active'
            id='ex2-tab-1'
            data-toggle='tab'
            href='#ex2-tabs-1'
            role='tab'
          >Open projects</a>
        </li>
        <li data-toggle='tab' role='presentation'>
          <a
            class='nav-link'
            id='ex2-tab-2'
            data-toggle='tab'
            href='#ex2-tabs-2'
            role='tab'
          >Recently Closed</a>

        </li>
      </ul>
      <div class='tab-content' id='ex2-content'>
        <div class='tab-pane fade show active' id='ex2-tabs-1' role='tabpanel'>
          <div class='row d-flex flex-row'>
            {{#each open_services}}
              <div class='card col-md-6 nav-item p-0 w-22'>
                <div class='card-body'id="card-service">
                  <H5 class='card-title'>{{name}}</H5>
                  <H5 class='card-title'>{{status}}</H5>
                  <H5 class='card-title'>Request Date:
                    {{format_date date_requested}}</H5>
                  <p class='card-text'>{{description}}</p>
                  <a
                    href='#'
                    data-id='{{id}}'
                    data-status='CLOSED'
                    id='close_service_request_btn'
                    class='btn btn-primary'
                  >Project completed</a>
                </div>
              </div>
            {{/each}}
          </div>
        </div>
        <div class='tab-pane fade' id='ex2-tabs-2' role='tabpanel'>
          <div class='row d-flex flex-row'>
            {{#each closed_services}}
              <div class='card col-md-6 nav-item p-0 w-25'>
                <div class='card-body' id="card-service">
                  <H5 class='card-title'>{{name}}</H5>
                  <H5 class='card-title'>{{status}}</H5>
                  <H5 class='card-title'>Service Date:
                    {{format_date service_date}}</H5>
                  <p class='card-text'>{{description}}</p>
                </div>
              </div>
            {{/each}}
          </div>
        </div>
      </div>
      <hr />
      <br />

      <div class='row d-flex flex-column mb-15'>
        <h3>Your registered skill</h3>
        <button
          class='btn btn-warning w-50'
          style='cursor: none;'
        >{{session.provider_skill.category.name}}/{{session.provider_skill.skill.name}}</button>
        <br />
        <br />
        <button
          class='btn btn-primary w-50'
          id='continue_getting_started_btn'
        >Let's do some more...</button>
      </div>
    {{else}}
      <div class='row'>
        <button
          type='submit'
          class='btn btn-primary'
          id='continue_getting_started_btn'
        >Let's get started</button>
      </div>
    {{/if}}
  </div>
  <div class='col-md-5'>
                      <div class="card d-block mt-2"><p>

        Name: <strong>{{user.first_name}}</strong><br>
        <input type="text" value="{{user.id}}" hidden>
        </p>
        
        <button class="btn newclass" type="button" data-toggle="collapse" data-target="#uploadPhoto" aria-expanded="false" aria-controls="collapseExample">
        <i class="fas fa-file-image-o" aria-hidden="true"></i>&nbsp;Upload Profile Photo
        </button>
        <div class="collapse" id="uploadPhoto">
          <div class="card card-body">
            <form method="POST" action="/upload/{{id}}" enctype="multipart/form-data">
              <input type="file" name="image" />
              <input type="submit" />
            </form>  
          </div>
        </div>
        </div>
    <div
      id='carouselExampleSlidesOnly'
      class='carousel slide'
      data-ride='carousel'
    >
      <div class='carousel-inner'>
        <div class='carousel-item active'>
          <img
            class='d-block w-100'
            src='../images/review1.png'
            alt='First slide'
          />
        </div>
        <div class='carousel-item'>
          <img
            class='d-block w-100'
            src='../images/eliareview.png'
            alt='Second slide'
          />
        </div>
        <div class='carousel-item'>
          <img
            class='d-block w-100'
            src='../images/nreview.png'
            alt='Third slide'
          />
        </div>
      </div>
    </div>
  </div>
</div>
<br />
<br />
<script src='../../js/dashboard.js'></script>