<div class='row'>
  <div class='col-md-6'>
    <div class='mb-5'>
      <div class='row'>
        <div class='mb-5'>
          <h2 class='text-left'>Hey
            {{user.first_name}}! Ready for an opportunity to server?</h2>
        </div>
      </div>
      <div class='row'>
        <div>
          <p class='text-left'><i class='fas fa-regular fa-user'></i>
            Answer a few questions to start building your profile</p>
        </div>
      </div>
      <hr />
      <div class='row'>
        <div>
          <p class='text-left'>
            <i class='fas fa-regular fa-clock'></i>
            Sit and wait while we find you an opportunity to serve</p>
        </div>
      </div>
      <hr />
      <div class='row'>
        <div>
          <p class='text-left'>
            <i class='fas fa-solid fa-people-group'></i>Collaborate and team up
            with other professionals on bigger projects (Coming soon!)</p>
        </div>
      </div>
      {{#if services}}
        {{#each services}}
          <div class='card' style='width: 18rem;'>
            <img class='card-img-top' src='...' alt='Card image cap' />
            <div class='card-body'>
              <h5 class='card-title'>{{name}}</h5>
              <p class='card-text'>{{description}}</p>
              <a
                href='#'
                id='edit_service_commitment'
                class='btn btn-primary'
              >edit service commitment</a>
            </div>
          </div>

          <div class='row'>
            {{#each provider.provider_skills}}
              {{skill.name}}
            {{/each}}
          </div>
        {{/each}}
      {{else}}
        <div class='row'>
          <button
            type='submit'
            class='btn btn-primary'
            id='continue_getting_started_btn'
          >Let's get started</button>
        </div>
      {{/if}}
    </div>
  </div>
  <div class='col-md-6'>
    <div id='carouselExampleSlidesOnly' class='carousel slide' data-ride='carousel'>
      <div class='carousel-inner'>
        <div class='carousel-item active'>
            <img class='d-block w-100' src='../images/review1.png' alt='First slide' />
          </div> 
        <div class='carousel-item'>
          <img class='d-block w-100' src='../images/eliareview.png' alt='Second slide' />
        </div>
        <div class='carousel-item'>
          <img class='d-block w-100' src='../images/nreview.png' alt='Third slide' />
        </div>
        <div class='carousel-item'>
          <img class='d-block w-100' src='../images/review1.png' alt='first slide' />
        </div>
      </div>
    </div>
  </div>
</div>

